rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Lekce a Plán výuky může číst a zapisovat kdokoliv přihlášený (profesor)
    match /lessons/{lessonId} {
      allow read, write: if request.auth != null;
    }
    match /timeline_events/{eventId} {
      allow read, write: if request.auth != null;
    }

    // --- KĽÚČOVÁ OPRAVA ZABEZPEČENIA ---
    match /students/{studentId} {
      // Profesor (kdokoliv přihlášený) může číst seznam všech studentů a sledovat změny.
      // Zmena z 'allow list' na 'allow read'
      allow read: if request.auth != null;

      // Student si může číst a upravovat POUZE svůj vlastní profil.
      allow get, update: if request.auth != null && request.auth.uid == studentId;

      // Vytvořit nový profil (při registraci) může kdokoliv přihlášený.
      allow create: if request.auth != null;
    }

    // Konverzace
    match /conversations/{studentId} {
      // Pravidlá pre konverzácie zostávajú nezmenené
      allow read, write: if request.auth != null && request.auth.uid == studentId;
      allow read, write: if request.auth != null; // Toto by malo byť sprísnené na rolu profesora
    }

    // Zprávy v konverzaci
    match /conversations/{studentId}/messages/{messageId} {
      // Pravidlá pre správy zostávajú nezmenené
      allow read, create: if request.auth != null && request.auth.uid == studentId;
      allow read, create: if request.auth != null; // Toto by malo byť sprísnené na rolu profesora
    }
  }
}
