rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Profesori môžu čítať a zapisovať všetko
    match /{document=**} {
      allow read, write: if request.auth.token.role == 'professor';
    }

    // Študenti
    match /students/{studentId} {
      allow read: if request.auth.uid == studentId;
    }

    match /lessons/{lessonId} {
      allow read: if request.auth.token.role == 'student';
    }
    
    // NOVÁ ČASŤ: Pravidlá pre ukladanie pokroku
    match /students/{studentId}/progress/{lessonId} {
      allow read, write: if request.auth.uid == studentId;
    }
  }
}
