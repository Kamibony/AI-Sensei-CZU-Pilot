rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Pre účely pilotu: Povoľ čítanie a zápis pre všetkých prihlásených používateľov
    // do všetkých kolekcií. Toto je nebezpečné pre produkciu, ale zaručuje funkčnosť.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
