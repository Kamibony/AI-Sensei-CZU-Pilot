rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  
    // --- POMOCNÉ FUNKCIE ---
    function isSignedIn() {
      return request.auth != null;
    }
    function isProfessor() {
      return isSignedIn() && request.auth.token.email == 'profesor@profesor.cz';
    }
   function isProfessorRole() {
      // Táto funkcia potrebuje povolenie na čítanie /users/{userId}
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'professor';
    }
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    // NOVÁ FUNKCIA: Overí, či je študent členom skupiny priradenej k lekcii.
    function isStudentInGroup(lessonData) {
        // Získame dáta študenta. Musí existovať dokument a v ňom pole 'memberOfGroups'.
        let studentDoc = get(/databases/$(database)/documents/students/$(request.auth.uid));
        // Lekcia musí mať priradené skupiny v poli 'assignedToGroups'.
        return isSignedIn() &&
               exists(/databases/$(database)/documents/students/$(request.auth.uid)) &&
               'memberOfGroups' in studentDoc.data &&
               'assignedToGroups' in lessonData &&
               // Skontrolujeme, či existuje prienik medzi skupinami študenta a skupinami lekcie.
               studentDoc.data.memberOfGroups.hasAny(lessonData.assignedToGroups);
    }
    // -----------------------

    // Kolekcia pre študentov (zjednotená)
    match /students/{studentId} {
      allow read: if isProfessor() || isProfessorRole() || isOwner(studentId);
      allow create, update: if isOwner(studentId);
    }

    // Pravidlá pre správu používateľov
    match /users/{userId} {
      // Admin (profesor@profesor.cz) môže čítať zoznam všetkých používateľov
      allow list: if isProfessor();

      // --- ZAČIATOK OPRAVY PARADOXU ---

      // 1. OPRAVA: Povoľ čítanie (get) VŠETKÝM PRIHLÁSENÝM.
      // Toto je kľúčové, aby služba Storage mohla overiť rolu
      // volaním get() na tento dokument.
      allow get: if isSignedIn();

      // 2. OPRAVA: Explicitne povoľ 'create' iba pre vlastníka.
      // Toto rieši zlyhanie registrácie nového profesora.
      allow create: if isOwner(userId);

      // 3. Ponechaj 'update' prísne (len vlastník alebo starý admin).
      allow update: if isOwner(userId) || isProfessor();

      // 4. Ponechaj 'delete' prísne (len starý admin).
      allow delete: if isProfessor();

      // --- KONIEC OPRAVY ---
    }

    // Lekcie
    match /lessons/{lessonId} {
      // OPRAVA: Pridaná kontrola pre študentov cez isStudentInGroup.
      // Čítať môže: vlastník lekcie (profesor), starý admin, alebo študent, ktorý je v príslušnej skupine.
      allow read: if (resource.data.ownerId == request.auth.uid) || isProfessor() || isStudentInGroup(resource.data);
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      allow update, delete: if (resource.data.ownerId == request.auth.uid) || isProfessor();
    }

    // Skupiny (triedy) pre študentov
    match /groups/{groupId} {
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      allow read, update, delete: if isSignedIn() && request.auth.uid == resource.data.ownerId;
    }

    // Konverzácie
    match /conversations/{studentId}/{document=**} {
      allow read, write: if isProfessor() || isProfessorRole() || isOwner(studentId);
    }
    
    // Timeline (každý profesor vlastní svoje eventy)
    match /timeline_events/{eventId} {
      allow read: if (resource.data.ownerId == request.auth.uid) || isProfessor();
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      allow update, delete: if (resource.data.ownerId == request.auth.uid) || isProfessor();
    }

    // Kvízy a testy
    match /quiz_submissions/{submissionId} {
      allow create: if isOwner(request.resource.data.studentId);
      allow read: if (isOwner(resource.data.studentId)) ||
                  (isProfessor() && get(/databases/$(database)/documents/lessons/$(resource.data.lessonId)).data.ownerId == request.auth.uid) ||
                  (isProfessorRole() && get(/databases/$(database)/documents/lessons/$(resource.data.lessonId)).data.ownerId == request.auth.uid);
    }
    match /test_submissions/{submissionId} {
       allow create: if isOwner(request.resource.data.studentId);
       allow read: if isProfessor() || isOwner(resource.data.studentId);
    }
  }
}
