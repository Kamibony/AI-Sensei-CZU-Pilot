rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Lekcie a ich obsah môžu všetci prihlásení používatelia čítať
    match /lessons/{lessonId} {
      allow read: if request.auth != null;
      // Zapisovať (vytvárať/meniť lekcie) môže len profesor (predpoklad)
      // Toto pravidlo je zatiaľ zjednodušené, neskôr ho môžeme spresniť na rolu profesora
      allow write: if request.auth != null; 

      // --- TOTO JE NOVÁ A DÔLEŽITÁ ČASŤ ---
      // Pravidlá pre podkolekciu interakcií (chat s AI)
      match /interactions/{interactionId} {
        // Čítať históriu môže každý prihlásený používateľ
        allow read: if request.auth != null;
        // Vytvárať nové správy (interakcie) môže len prihlásený používateľ,
        // ktorý je zároveň autorom správy.
        allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      }
    }

    match /students/{studentId} {
      // Profesori môžu čítať zoznam študentov
      allow read: if request.auth != null; 
      // Študent môže čítať a meniť len svoj vlastný profil
      allow get, update: if request.auth != null && request.auth.uid == studentId;
      // Vytvoriť profil (registrovať sa) môže ktokoľvek
      allow create;
    }
  }
}
