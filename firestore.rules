rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // PROFESSOR-ONLY a ADMIN-ONLY pravidlá
    match /lessons/{lessonId} {
      allow read, write: if request.auth.token.role == 'professor' || request.auth.token.role == 'admin';
    }

    match /courses/{courseId} {
      allow read, write: if request.auth.token.role == 'professor' || request.auth.token.role == 'admin';
    }

    match /media/{mediaId} {
        allow read, write: if request.auth.token.role == 'professor' || request.auth.token.role == 'admin';
    }

    // PRAVIDLÁ PRE ŠTUDENTOV
    match /students/{studentId} {
      allow read: if request.auth != null;
      allow get, update: if request.auth != null && request.auth.uid == studentId;
      // --- OPRAVENÉ PRAVIDLO ---
      // Povolí vytvorenie dokumentu len vtedy, ak sa ID používateľa zhoduje s ID dokumentu
      allow create: if request.auth != null && request.auth.uid == studentId;
    }

    match /students/{studentId}/conversations/{conversationId} {
        allow read, write: if request.auth != null && request.auth.uid == studentId;
    }
    
    match /students/{studentId}/submissions/{submissionId} {
        allow read, write: if request.auth != null && (request.auth.uid == studentId || request.auth.token.role == 'professor');
    }

    // PRAVIDLÁ PRE VŠETKY ROLY
    match /conversations/{conversationId} {
        allow read, write: if request.auth != null;
    }
  }
}
