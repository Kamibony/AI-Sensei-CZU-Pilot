rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Lekcie a ich obsah môžu všetci prihlásení používatelia čítať
    match /lessons/{lessonId} {
      allow read, write: if request.auth != null;

      // --- TOTO JE NOVÁ A DÔLEŽITÁ ČASŤ ---
      // Pravidlá pre podkolekciu interakcií (chat s AI)
      match /interactions/{interactionId} {
        // Čítať históriu môže každý prihlásený používateľ
        allow read: if request.auth != null;
        // Vytvárať nové správy (interakcie) môže len prihlásený používateľ,
        // ktorý je zároveň autorom správy.
        allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      }
    }

    // Ostatné pravidlá ostávajú nezmenené
    match /students/{studentId} {
      allow read: if request.auth != null;
      allow get, update: if request.auth != null && request.auth.uid == studentId;
      allow create;
    }

    match /conversations/{studentId} {
      allow read, write: if request.auth != null;
    }

    match /conversations/{studentId}/messages/{messageId} {
      allow read, create: if request.auth != null;
    }
  }
}
