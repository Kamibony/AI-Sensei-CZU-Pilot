rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  
    // --- POMOCNÉ FUNKCIE ---
    function isSignedIn() {
      return request.auth != null;
    }
    function isProfessor() {
      return isSignedIn() && request.auth.token.email == 'profesor@profesor.cz';
    }
    function isProfessorRole() {
      return isSignedIn() && request.auth.token.role == 'professor';
    }
    // --- NOVÁ FUNKCIA PRE ŠTUDENTA ---
    function isStudentRole() {
      return isSignedIn() && request.auth.token.role == 'student';
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Kolekcia pre študentov (zjednotená)
    match /students/{studentId} {
      allow read: if isProfessor() || isProfessorRole() || isOwner(studentId);
      allow create, update: if isOwner(studentId);

      // Povol read/write pre subkolekciu progress pre vlastníka
      match /progress/{lessonId} {
        allow read, write: if isOwner(studentId);
      }
    }

    // Pravidlá pre správu používateľov
    match /users/{userId} {
      // Admin (profesor@profesor.cz) môže čítať zoznam všetkých používateľov
      allow list: if isProfessor();
      
      // 1. Povol 'get' pre vlastníka (aby si mohol načítať profil)
      allow get: if isOwner(userId);

      // 2. Explicitne povoľ 'create' a 'update' pre vlastníka (Self-Provisioning).
      // Zaisťuje, že používateľ môže vytvoriť (create) a upraviť (update) LEN svoj vlastný dokument.
      allow create, update: if isOwner(userId);

      // 3. Ponechaj 'update' aj pre profesora (administratívne zásahy).
      allow update: if isProfessor();

      // 4. Ponechaj 'delete' prísne (len starý admin).
      allow delete: if isProfessor();
    }

    // Lekcie
    match /lessons/{lessonId} {
      allow read: if (resource.data.ownerId == request.auth.uid) ||
                     isProfessor() || 
                     (isStudentRole() && resource.data.assignedToGroups.hasAny(get(/databases/$(database)/documents/students/$(request.auth.uid)).data.memberOfGroups));
      
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      allow update, delete: if (resource.data.ownerId == request.auth.uid) || isProfessor();
    }

    // Skupiny (triedy) pre študentov
    match /groups/{groupId} {
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      allow read: if (resource.data.ownerId == request.auth.uid) || (request.auth.uid in resource.data.studentIds);
      
      allow update, delete: if isSignedIn() && request.auth.uid == resource.data.ownerId;
    }

    // Konverzácie
    match /conversations/{studentId}/{document=**} {
      allow read, write: if isProfessor() || isProfessorRole() || isOwner(studentId);
    }
    
    // Timeline (každý profesor vlastní svoje eventy)
    match /timeline_events/{eventId} {
      allow read: if (resource.data.ownerId == request.auth.uid) || isProfessor();
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      allow update, delete: if (resource.data.ownerId == request.auth.uid) || isProfessor();
    }

    // Kvízy a testy
    match /quiz_submissions/{submissionId} {
      allow create: if isOwner(request.resource.data.studentId);
      allow read: if isOwner(resource.data.studentId) || isProfessor() || isProfessorRole();
    }
    match /test_submissions/{submissionId} {
       allow create: if isOwner(request.resource.data.studentId);
       allow read: if isProfessor() || isProfessorRole() || isOwner(resource.data.studentId);
    }

    // Odborný výcvik (Praxe)
    match /practical_sessions/{sessionId} {
      allow read: if isSignedIn(); // Students need to read active sessions
      allow create, update, delete: if isProfessor() || isProfessorRole();
    }
    match /practical_submissions/{submissionId} {
      allow read: if (resource.data.studentId == request.auth.uid) || isProfessor() || isProfessorRole();
      allow create: if isSignedIn(); // Students create submissions
      allow update: if isProfessor() || isProfessorRole(); // Professor grades it
    }

    // Kolekcia pre metadáta súborov (index pre Storage)
    match /fileMetadata/{fileId} {
      // Vytvoriť záznam môže len používateľ s rolou 'profesor', a to iba ak je 'ownerId' v dokumente jeho vlastné UID.
      allow create: if isProfessorRole() && request.resource.data.ownerId == request.auth.uid;

      // Čítať a mazať záznam môže iba vlastník alebo hlavný admin.
      allow read, delete: if (isSignedIn() && resource.data.ownerId == request.auth.uid) || request.auth.token.email == 'profesor@profesor.cz';
      // Aktualizovať záznam môže iba jeho vlastník (potrebné pre dokončenie uploadu).
      allow update: if (isSignedIn() && resource.data.ownerId == request.auth.uid);
    }

    // Systémové nastavenia (AI Config) - OPRAVENÉ
    match /system_settings/{settingId} {
      // Čítať môže každý profesor (aby generátor vedel, aké sú nastavenia)
      allow read: if isProfessor() || isProfessorRole();
      
      // Zapisovať/meniť môže iba hlavný admin (profesor@profesor.cz)
      allow write: if isProfessor();
    }
  }
}
