rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  
    // --- POMOCNÉ FUNKCIE ---
    function isSignedIn() {
      return request.auth != null;
    }
    function isProfessor() {
      // Skontroluje či je email admina ALEBO či má custom claim 'role' nastavený na 'professor'
      // ALEBO či má v databáze rolu 'professor' (Fallback pre chýbajúce claims)
      return isSignedIn() && (
        (request.auth.token.get('email', '') == 'profesor@profesor.cz') ||
        (request.auth.token.get('role', '') == 'professor') ||
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'professor')
      );
    }
    // Pre istotu, ak by sa 'role' volalo inak v tokenoch
    function isProfessorRole() {
       return isSignedIn() && request.auth.token.get('role', '') == 'professor';
    }
    
    function isStudentRole() {
      return isSignedIn() && request.auth.token.role == 'student';
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Kolekcia pre študentov (zjednotená)
    match /students/{studentId} {
      allow read: if isProfessor() || isOwner(studentId);
      allow create, update: if isOwner(studentId);

      // Povol read/write pre subkolekciu progress pre vlastníka
      match /progress/{lessonId} {
        allow read, write: if isOwner(studentId);
      }
    }

    // Pravidlá pre správu používateľov
    match /users/{userId} {
      // Admin/Profesor môže čítať zoznam všetkých používateľov
      allow list: if isProfessor();
      // 1. Povol 'get' pre vlastníka (aby si mohol načítať profil)
      allow get: if isOwner(userId);
      // 2. Explicitne povoľ 'create' a 'update' pre vlastníka (Self-Provisioning).
      allow create, update: if isOwner(userId);
      // 3. Ponechaj 'update' aj pre profesora (administratívne zásahy).
      allow update: if isProfessor();
      // 4. Ponechaj 'delete' prísne (len starý admin).
      allow delete: if isProfessor();
    }

    // Lekcie
    match /lessons/{lessonId} {
      allow read: if (resource.data.ownerId == request.auth.uid) || isProfessor() || 
                     (isStudentRole() && resource.data.assignedToGroups.hasAny(get(/databases/$(database)/documents/students/$(request.auth.uid)).data.memberOfGroups));
      
      allow create: if isProfessor() && request.resource.data.ownerId == request.auth.uid;
      allow update, delete: if (resource.data.ownerId == request.auth.uid) || isProfessor();
    }

    // Kurzy (nové pravidlo pre storage paths mapped to firestore if needed, or generally locked down)
    match /courses/{courseId} {
      allow read: if isSignedIn();
    }

    // --- KĽÚČOVÁ OPRAVA: SKUPINY (TRIEDY) ---
    match /groups/{groupId} {
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      
      // 1. ČÍTANIE: Každý prihlásený (aby študent videl "Pointer" activeSessionId)
      allow read: if isSignedIn();
      
      // 2. UPDATE (Zápis Pointera): Povolíme Vlastníkovi ALEBO Profesorovi.
      // Toto je nutné, aby profesor mohol zapísať ID hodiny do skupiny, aj keď ju nevytvoril.
      allow update: if (isSignedIn() && request.auth.uid == resource.data.ownerId) || isProfessor();
      
      allow delete: if isSignedIn() && request.auth.uid == resource.data.ownerId;

      // --- DEDICATED SIGNAL CHANNEL (Live Status) ---
      // This allows ANY Professor to update the live signal, bypassing group ownership locks.
      match /live_status/current {
        allow read: if isSignedIn();
        allow write: if isProfessor();
      }
    }

    // Konverzácie
    match /conversations/{studentId}/{document=**} {
      allow read, write: if isProfessor() || isOwner(studentId);
    }
    
    // Timeline (každý profesor vlastní svoje eventy)
    match /timeline_events/{eventId} {
      allow read: if (resource.data.ownerId == request.auth.uid) || isProfessor();
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      allow update, delete: if (resource.data.ownerId == request.auth.uid) || isProfessor();
    }

    // Kvízy a testy
    match /quiz_submissions/{submissionId} {
      allow create: if isOwner(request.resource.data.studentId);
      allow read: if isOwner(resource.data.studentId) || isProfessor();
    }
    match /test_submissions/{submissionId} {
       allow create: if isOwner(request.resource.data.studentId);
       allow read: if isProfessor() || isOwner(resource.data.studentId);
    }

    // Pedagogická praxe (Observations, Microteaching, Portfolio)
    match /pedagogical_practice/{docId} {
      allow create: if isSignedIn();
      allow read, update, delete: if (resource.data.studentId == request.auth.uid);
      allow read, update: if isProfessor();
    }

    // Odborný výcvik (Praxe)
    match /practical_sessions/{sessionId} {
      // Študent musí vedieť prečítať session, na ktorú ukazuje Pointer
      allow read: if isSignedIn(); 
      allow create, update, delete: if isProfessor();
    }
    match /practical_submissions/{submissionId} {
      allow read: if (resource.data.studentId == request.auth.uid) || isProfessor();
      allow create: if isSignedIn(); // Students create submissions
      allow update: if isProfessor(); // Professor grades it
      allow delete: if request.auth != null && request.auth.uid == resource.data.studentId;
    }

    // Kolekcia pre metadáta súborov (index pre Storage)
    match /fileMetadata/{fileId} {
      allow create: if isProfessor() && request.resource.data.ownerId == request.auth.uid;
      allow read, delete: if (isSignedIn() && resource.data.ownerId == request.auth.uid) || request.auth.token.get('email', '') == 'profesor@profesor.cz';
      allow update: if (isSignedIn() && resource.data.ownerId == request.auth.uid);
    }

    // Systémové nastavenia (AI Config)
    match /system_settings/{settingId} {
      allow read: if isProfessor();
      allow write: if isProfessor();
    }
  }
}
