rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Lekce a Plán výuky může číst kdokoliv přihlášený
    match /lessons/{lessonId} {
      allow read, write: if request.auth != null;
    }
    match /timeline_events/{eventId} {
      allow read, write: if request.auth != null;
    }

    // --- KĽÚČOVÁ ZMENA PRE SPRÁVU ŠTUDENTOV ---
    match /students/{studentId} {
      // Profesor (kdokoliv přihlášený) může číst seznam všech studentů.
      allow list: if request.auth != null;

      // Student si může číst a upravovat POUZE svůj vlastní profil.
      allow get, update: if request.auth != null && request.auth.uid == studentId;

      // Vytvořit nový profil (při registraci) může kdokoliv přihlášený.
      allow create: if request.auth != null;
    }

    // Konverzace může číst a zapisovat zúčastněný student a profesor
    match /conversations/{studentId} {
      // Student může číst a zapisovat pouze ve své konverzaci
      allow read, write: if request.auth != null && request.auth.uid == studentId;
      // Profesor (kdokoliv přihlášený) může číst všechny konverzace
      allow read, write: if request.auth != null;
    }

    // Zprávy v konverzaci může číst a zapisovat daný student a profesor
    match /conversations/{studentId}/messages/{messageId} {
      // Student může číst a vytvářet zprávy pouze ve své vlastní konverzaci
      allow read, create: if request.auth != null && request.auth.uid == studentId;
      // Profesor (kdokoliv přihlášený) může také číst a vytvářet zprávy
      allow read, create: if request.auth != null;
    }
  }
}
