rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Lekce a Plán výuky může číst kdokoliv přihlášený
    match /lessons/{lessonId} {
      allow read: if request.auth != null;
      // Zapisovat může kdokoliv (pro jednoduchost, ideálně by to byl jen profesor)
      allow write: if request.auth != null;
    }
    match /timeline_events/{eventId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // Studenti si mohou číst a upravovat pouze svůj vlastní profil
    match /students/{studentId} {
      allow read, update: if request.auth != null && request.auth.uid == studentId;
      allow create: if request.auth != null;
    }

    // --- KLÍČOVÁ ZMĚNA PRO CHAT ---
    // Konverzace může číst pouze zúčastněný student a profesor
    match /conversations/{studentId} {
      allow read, write: if request.auth != null && request.auth.uid == studentId;
      // Profesor (pro jednoduchost kdokoliv přihlášený) může číst všechny konverzace
      allow read, write: if request.auth != null; // Toto pravidlo umožňuje profesorovi přístup
    }

    // Zprávy v konverzaci může číst a zapisovat pouze daný student a profesor
    match /conversations/{studentId}/messages/{messageId} {
      // Student může číst a vytvářet zprávy pouze ve své vlastní konverzaci
      allow read, create: if request.auth != null && request.auth.uid == studentId;
      // Profesor (kdokoliv přihlášený) může také číst a vytvářet zprávy
      allow read, create: if request.auth != null;
    }
  }
}
