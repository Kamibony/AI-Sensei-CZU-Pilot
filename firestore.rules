rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Funkcia na overenie, či je používateľ profesor
    function isProfessor() {
      return request.auth != null && request.auth.token.email == 'profesor@profesor.cz';
    }

    // Študenti:
    // Študent môže čítať a upravovať svoj profil.
    // Profesor môže čítať profily všetkých študentov.
    match /students/{studentId} {
      allow read: if (request.auth != null && request.auth.uid == studentId) ||
 isProfessor();
      allow update: if request.auth != null && request.auth.uid == studentId;
      // Vytváranie a mazanie je riadené z backendu alebo pri registrácii
      // --- OPRAVA ---
      // Povolí prihlásenému študentovi vytvoriť si vlastný profilový dokument, ak neexistuje.
      allow create: if request.auth != null && request.auth.uid == studentId;
      allow delete: if false;
      // --- KONIEC OPRAVY ---
    }

    // Lekcie:
    // Každý prihlásený môže čítať lekcie.
    // Iba profesor môže vytvárať, upravovať a mazať lekcie.
    match /lessons/{lessonId} {
      allow read: if request.auth != null;
      allow write: if isProfessor();
    }

    // Konverzácie:
    // Profesor môže čítať a zapisovať do všetkých konverzácií a správ.
    // Študent môže čítať a zapisovať iba do svojej vlastnej konverzácie a správ.
    match /conversations/{studentId} {
      match /{document=**} {
        allow read, write: if (request.auth != null && request.auth.uid == studentId) ||
 isProfessor();
      }
    }
    
    // Časová os (timeline):
    // Iba profesor môže čítať a zapisovať.
    match /timeline_events/{eventId} {
       allow read, write: if isProfessor();
    }

    // Výsledky kvízov:
    // Študent môže iba vytvárať (odosielať) svoje výsledky.
    // Profesor ich môže všetky čítať.
    match /quiz_submissions/{submissionId} {
      allow create: if request.auth != null && request.resource.data.studentId == request.auth.uid;
      allow read: if isProfessor();
      allow update, delete: if false;
    }

    // Výsledky testov:
    // Podobne ako pri kvízoch.
    match /test_submissions/{submissionId} {
       allow create: if request.auth != null && request.resource.data.studentId == request.auth.uid;
       allow read: if isProfessor();
       allow update, delete: if false;
    }
  }
}
