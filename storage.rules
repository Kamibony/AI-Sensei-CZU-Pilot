rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function isProfessor() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'professor';
    }

    // Professors can list files in the media library
    match /courses/{courseId}/media {
      allow list: if isProfessor() || request.auth.token.email == 'profesor@profesor.cz';
    }

    // Professors can read and write files in the media library
    match /courses/{courseId}/media/{fileId} {
      allow read, write: if isProfessor() || request.auth.token.email == 'profesor@profesor.cz';
    }

    // Fallback for any other paths - only owner can read/write
    match /{allPaths=**} {
        allow read, write: if request.auth.uid == resource.metadata.ownerId;
    }
  }
}
