rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Pomocná funkcia na overenie, či má používateľ rolu 'profesor'.
    // Kontroluje "odznak" (Custom Claim) v tokene.
    function isProfessor() {
      return request.auth != null && request.auth.token.role == 'professor';
    }

    // --- VEREJNÉ ZDROJE ---
    match /public-assets/{allPaths=**} {
      allow read;
    }

    // --- PRAVIDLÁ PRE PROFESOROV A ADMINA ---
    match /courses/{courseId}/media {
      allow list: if isProfessor() || request.auth.token.email == 'profesor@profesor.cz';
    }

    match /courses/{courseId}/media/{fileId} {
      // Čítať a mazať môže vlastník súboru (profesor) alebo admin.
      allow read, delete: if (isProfessor() && request.auth.uid == resource.metadata.customMetadata.ownerId) || request.auth.token.email == 'profesor@profesor.cz';

      // Vytvárať môže profesor, pričom musí nastaviť seba ako vlastníka, alebo admin.
      allow create: if (isProfessor() && request.auth.uid == request.resource.metadata.customMetadata.ownerId) || request.auth.token.email == 'profesor@profesor.cz';
    }

    // --- ZÁLOŽNÉ PRAVIDLO PRE OSTATNÉ CESTY ---
    match /{allPaths=**} {
        allow read, write: if request.auth.uid == resource.metadata.ownerId;
    }
  }
}
