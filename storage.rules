rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function isProfessor() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'professor';
    }

    // Allow professors to manage all course media
    match /courses/{courseId}/media/{allPaths=**} {
      allow read, write, list: if isProfessor() || request.auth.token.email == 'profesor@profesor.cz';
    }

    // Fallback for any other paths - only owner can read/write
    match /{allPaths=**} {
        allow read, write: if request.auth.uid == resource.metadata.ownerId;
    }
  }
}
