rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    function isProfessor() {
      return request.auth != null && request.auth.token.role == 'professor';
    }

    match /public-assets/{allPaths=**} {
      allow read;
    }

    match /courses/{courseId}/media/{allPaths=**} {
      // Allow if the user is a professor AND the folder name matches their UID
      allow read, write, delete: if isProfessor() && (request.auth.uid == courseId || request.auth.token.email == 'profesor@profesor.cz');
    }

    match /podcasts/{allPaths=**} {
       allow read: if request.auth != null;
    }

    match /podcasts/{fileName} {
       allow read, write, delete: if isProfessor();
    }

    // Default deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
