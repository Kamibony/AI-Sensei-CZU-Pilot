rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Pomocná funkcia na overenie, či má používateľ rolu 'profesor'.
    // (Nezmenené)
    function isProfessor() {
      return request.auth != null && request.auth.token.role == 'professor';
    }

    // --- VEREJNÉ ZDROJE ---
    // (Nezmenené)
    match /public-assets/{allPaths=**} {
      allow read;
    }

    // --- PRAVIDLÁ PRE PROFESOROV A ADMINA ---

    // ARCHITEKTÚRA: "Firestore ako index pre Storage"
    // Pravidlo 1: Zakáž 'list' operáciu
    // 'listAll()' je nebezpečné, nahrádzame ho dotazom do Firestore.
    match /courses/{courseId}/media {
      allow list: if false; // Explicitne zakázané
    }

    // Pravidlo 2: Prístup k jednotlivým súborom len na základe vlastníctva
    match /courses/{courseId}/media/{fileId} {
      // Čítať súbor môže iba jeho vlastník (podľa metadát) alebo admin.
      allow read: if (isProfessor() && request.auth.uid == resource.metadata.customMetadata.ownerId)
                  || request.auth.token.email == 'profesor@profesor.cz';

      // Vytvoriť súbor (upload) môže profesor, ak pre daný súbor existuje platný
      // "placeholder" dokument vo Firestore, ktorý vlastní daný používateľ.
      // Súbor v Storage musí mať ako názov ID tohto dokumentu.
      allow create: if isProfessor() && exists(/databases/$(database)/documents/fileMetadata/$(fileId))
                    && get(/databases/$(database)/documents/fileMetadata/$(fileId)).data.ownerId == request.auth.uid;

      // Mazať súbor môže iba jeho vlastník alebo admin.
      allow delete: if (isProfessor() && request.auth.uid == resource.metadata.customMetadata.ownerId)
                      || request.auth.token.email == 'profesor@profesor.cz';
    }

    // --- ZÁLOŽNÉ PRAVIDLO PRE OSTATNÉ CESTY ---
    //
    // === OPRAVA CHYBY ===
    // Toto pravidlo zachytáva všetky požiadavky, ktoré "prepadnú"
    // cez špecifické pravidlá vyššie. Musí byť tiež konzistentné
    // a používať 'customMetadata' rovnako ako tvoj klientsky kód.
    //
    match /{allPaths=**} {
        allow read, write: if request.auth.uid == resource.metadata.customMetadata.ownerId;
    }
  }
}
