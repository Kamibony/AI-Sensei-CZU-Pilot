rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    function isProfessor() {
      return request.auth != null && request.auth.token.role == 'professor';
    }

    match /public-assets/{allPaths=**} {
      allow read;
    }

    match /courses/{courseId}/media/{allPaths=**} {
      // Allow if the user is a professor AND the folder name matches their UID
      allow read, write, delete: if isProfessor() && (request.auth.uid == courseId || request.auth.token.email == 'profesor@profesor.cz');
    }

    // Podcasts (Audio Lessons)
    // Allow read access to all authenticated users (students and professors)
    // This fixes the "Silent Podcast" issue for students
    match /podcasts/{allPaths=**} {
       allow read: if request.auth != null;
    }

    // Allow professors to manage podcasts
    match /podcasts/{fileName} {
       allow write, delete: if isProfessor();
    }

    // --- FIX: POVOLENIE UPLOADU PRE Å TUDENTOV ---
    // Allow students to upload practical work
    // Matches path: practical_uploads/{sessionId}/{fileName}
    match /practical_uploads/{sessionId}/{fileName} {
      // Allow read: Professors need to see it, Students need to see their own
      allow read: if request.auth != null;
      
      // Allow write: User can upload if they are authenticated
      // Security check: filename must start with the user's UID to prevent overwriting others' work
      allow write: if request.auth != null && fileName.matches(request.auth.uid + '.*');
    }
    // ---------------------------------------------

    // Default deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
