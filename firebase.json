{
  "firestore": {
    "rules": "firestore.rules"
  },
  "functions": {
    "source": "functions"
  },
  "hosting": [
    {
      "target": "dev",
      "public": "public",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "prod",
      "public": "public",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  ],
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "auth": { "port": 9099, "host": "127.0.0.1" },
    "functions": { "port": 5001, "host": "127.0.0.1" },
    "firestore": { "port": 8080, "host": "127.0.0.1" },
    "hosting": { "port": 5000, "host": "127.0.0.1" },
    "storage": { "port": 9199, "host": "127.0.0.1" },
    "ui": { "enabled": true, "port": 4000, "host": "127.0.0.1" }
  }
}
